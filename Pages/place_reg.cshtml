    <div class="container" id="place_reg_container">

        <form method="post" action="place_reg" enctype="application/x-www-form-urlencoded">
            <div class="row">
                <h1>Place Registration</h1>
            </div>

            <div class="form-group">
                <div class="form-group row">
                    <label for="inputName">Name</label>
                    <input type="text" class="form-control mx-sm-3" name="inputName" placeholder="Name" />

                    <label for="inputPassword">Password</label>
                    <input type="password" name="inputPassword" class="form-control mx-sm-3" aria-describedby="passwordHelpInline" placeholder="Password">
                    <small id="passwordHelpInline" class="text-muted">
                        Must be 8-20 characters long.
                    </small>
                </div>


                <div class="form-group row">
                    <div class="form-group" id="category_row">
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="category1" name="category1" value="요리,식당">
                            <label class="custom-control-label" for="category1">요리/식당</label>
                        </div>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="category2" name="category2" value="술/주점">
                            <label class="custom-control-label" for="category2">술/주점</label>
                        </div>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="category3" name="category3" value="유흥/오락">
                            <label class="custom-control-label" for="category3">유흥/오락</label>
                        </div>
                    </div>
                </div>

                <div class="form-group row">


                    <label for="inputTitle">Title</label>
                    <input type="text" class="form-control mx-sm-3" name="inputTitle" placeholder="Title" />

                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control mx-sm-3" name="inputAddress" placeholder="Address" />

                    <label for="inputContext">Context</label>
                    <textarea class="form-control mx-sm-3" name="inputcontext" rows="5" placeholder="Context"></textarea>

                </div>

                <div class="form-group row">

                    <div class="col-12 text-right">
                        <input class="btn btn-success" type="submit" value="Submit">
                        <a class="btn btn-primary" href="index" role="button">Cancel</a>
                        <input class="btn btn-primary" type="reset" value="Reset">
                    </div>

                </div>

            </div>
        </form>
        @{
            if (Request.Method.ToLower() == "post" )
            {
        <content>


        </content>
                try
                {
                    DatabaseWrapper.SendPlace(
                        Request.Form["inputTitle"],
                        Request.Form["inputAddress"],
                        Request.Form["inputcontext"],
                        Request.Form["inputName"],
                        Request.Form["inputPassword"]
                    );
                    Response.Redirect("index");
                }
                catch (MySql.Data.MySqlClient.MySqlException) { }
            }
        }
    </div>
</body>





