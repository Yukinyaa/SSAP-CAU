@page
@using System
@{
    Response.ContentType = "text/xml";
}
<?xml version="1.0" encoding="UTF-8" ?>

<marker>

    @foreach(System.Data.DataRow item in DatabaseWrapper.SendQuery("select * from pin;").Tables[0].Rows)
    {
        <marker id='@item["pinID"]' name='@item["title"]' address='@item["addr"]' lat='@item["coordlat"]' lng='@item["coording"]' type='@(item["pinID"].ToString() == "1"?"place":"event")' />
    }
</marker>
